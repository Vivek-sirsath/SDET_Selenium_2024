<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="BTATSuite">
	<test thread-count="5" name="Test1">
		<classes>
			<class name="testNGBeforeTestAfterTest.C2" />
		</classes>
	</test> <!-- Test -->

	<test thread-count="5" name="Test2">
		<classes>
			<class name="testNGBeforeTestAfterTest.C1" />
		</classes>
	</test> <!-- Test -->
</suite> <!-- BTATSuite -->

<!-- If we put single class in each test tag, then BeforeTest and AfterTest 
	method will execute only once before executing all test methods -->

<!-- 'BeforeSuite' and 'AfterSuite' method will execute once before and after all methods -->